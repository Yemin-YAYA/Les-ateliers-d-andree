{% extends 'base.html.twig' %}

{% block title %}
	{{ post.title }}
{% endblock %}

{% block body %}

<div class="container-fluid mt-3 ">
	<div class="container containers">
						 {% if breadcrumbs is defined %}
                    {% include 'filedariane/breadcrumbs.html.twig' %}
