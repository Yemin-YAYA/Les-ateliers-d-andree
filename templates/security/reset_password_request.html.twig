{% extends 'base.html.twig' %}

{% block title %}Demande de réinitialisation de mot de passe{% endblock %}

{% block body %}
	<section class='mainreset' style="margin-top: -150px;">
	<h1 class="reset">Réinitialisation du mot de passe</h1>
		<div class="form-container">
			{% for message in app.flashes('succes') %}
				<div class="alert alert-success mt-2">
					{{ message }}
				</div>
			{% endfor %}

			<div class="row justify-content-center">
				<div class="col-12">
					{{ form_start(requestPassForm) }}
					{{ form_row(requestPassForm.email) }}
				</div>

				<div class='d-flex justify-content-center'>
					<button type="submit">✉️ Envoyer</button>
				</div>
				{{ form_end(requestPassForm) }}
			</div>
		</div>
	</section>
{% endblock %}
